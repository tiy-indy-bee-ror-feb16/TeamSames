<% unless current_user.blocking?(user) %>
  <% if current_user.follows?(user) %>
    <%= link_to "UnFollow", unfollow_path(user_id: user.id), method: :delete, class: "btn btn-default btn-follow", id: "btn-follow", remote: true %>
  <% else %>
    <%= link_to "Follow", follow_path(user_id: user.id), class: "btn btn-default btn-follow", id: "btn-follow", remote: true %>
  <% end %>
<% end %>
